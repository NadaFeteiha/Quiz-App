<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender_purple</item>
        <item name="colorPrimaryVariant">@color/jagger</item>
        <item name="colorOnPrimary">@color/melanie</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chestnutRose</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeCustomNoActionbar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/dark_purple</item>
    </style>


    <style name="ToolbarThem" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:color">@android:color/black</item>
    </style>
</resources>